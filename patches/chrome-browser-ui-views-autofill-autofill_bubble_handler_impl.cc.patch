+AutofillBubbleBase* AutofillBubbleHandlerImpl::ShowConfirmAutocompleteBubble(
+    content::WebContents* web_contents,
+    ConfirmAutocompleteBubbleController* controller,
+    bool is_user_gesture,
+    ConfirmAutocompleteBubbleType bubble_type) {
+  PageActionIconView* icon_view =
+      toolbar_button_provider_->GetPageActionIconView(
+          PageActionIconType::kSaveAutofillAddress);
+  DCHECK(icon_view);
+  views::View* anchor_view =
+      toolbar_button_provider_->GetAnchorView(PageActionIconType::kSaveAutofillAddress);
+
+  // TODO(crbug.com/1416270): Add Show() to AutofillBubbleBase and refactor
+  // below.
+  switch (bubble_type) {
+    case ConfirmAutocompleteBubbleType::kLocalSave: {
+      ConfirmAutocompleteBubbleView* bubble = new ConfirmAutocompleteBubbleView(
+          anchor_view, web_contents, controller);
+
+      DCHECK(bubble);
+      bubble->SetHighlightedButton(icon_view);
+
+      views::BubbleDialogDelegateView::CreateBubble(bubble);
+      bubble->Show(is_user_gesture ? LocationBarBubbleDelegateView::USER_GESTURE
+                                   : LocationBarBubbleDelegateView::AUTOMATIC);
+      return bubble;
+    }
+    case ConfirmAutocompleteBubbleType::kInactive:
+      NOTREACHED_NORETURN();
+  }
+}
